def addall(x):
    total = 0
    minus = 0
    for i in range (x):
        total = total + (x - minus)
        minus = minus + 1
    return total

facnum = abs(int(input("Input an integer")))
result = addall(facnum)
print("The sum of all numbers between 0 and the absolute value of your input,", facnum, "is", result)

